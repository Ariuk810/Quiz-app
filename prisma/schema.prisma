model Article {
  id String @id @unique @default(cuid())
  title String
  content String
  summary String
  userId String 
  user User @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  uptatedAt DateTime @default(now())

}

model User {
  id String @id @unique @default(cuid())
  name String?
  email String @unique
  articles Article[]
  quizAttempts QuizAttempt[]
  userScores UserScore[]
  createdAt DateTime @default(now())
  uptatedAt DateTime @default(now())
}

model QuizAttempt {
  id String @id @unique @default(cuid())
  userId String
  user User @relation(fields: [userId], references: [id])
  quizId String
  score Int
  totalQuestions Int
  correctAnswers Int
  attemptedAt DateTime @default(now())
}

model UserScore {
  id String @id @unique @default(cuid())
  userId String
  user User @relation(fields: [userId], references: [id])
  quizId String
  totalScore Int
  lastUpdated DateTime @default(now())
}